<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <EditText
        android:id="@+id/new_calendar_text"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="New Calendar Note"
        android:gravity="left|top"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/new_calendar_text_sub"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:layout_below="@id/new_calendar_text"
        android:background="@null"
        android:gravity="left|top"
        android:hint="SubInformation"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/new_calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/new_todo_text"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp" />


</RelativeLayout>